clear
echo 'Your Interactive Terminal'
echo ''
echo 'Waiting for Azure Credentials to be created'
echo ''
while [[ ! -f ~/.azure-resp ]]
do
  sleep 1
done
content=$(cat ~/.azure-resp)
username=$(echo $content | jq -r '.email')
resource=$(echo $content | jq -r '.resource')
password=$(echo $content | jq -r '.password')
region=$(echo $content | jq -r '.region')

echo 'Thank you! Your Azure Credentials have been created.'
echo "export USERNAME=$username" > ~/.azureenv
echo "export RESOURCE=$resource" >> ~/.azureenv
echo "export PASSWORD=$password" >> ~/.azureenv
echo "export REGION=\"$region\"" >> ~/.azureenv
echo "export username=$username" >> ~/.azureenv
echo "export resource=$resource" >> ~/.azureenv
echo "export password=$password" >> ~/.azureenv
echo "export region=\"$region\"" >> ~/.azureenv
echo "Username: $username"
echo "Password: $password"
echo "Resource Group: $resource"
echo "Region: \"$region\""
echo ''
echo 'Login to portal.azure.com or using the az CLI'